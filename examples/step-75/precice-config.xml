<?xml version="1.0"?>

<precice-configuration>

    <log>
        <sink filter="%Severity% > debug and %Rank% = 0" format="---[precice] %ColorizedSeverity% %Message%" enabled="true"/>
    </log>

    <solver-interface dimensions="2">

    <data:scalar name="solution"/>

    <mesh name="original-mesh">
        <use-data name="solution"/>
    </mesh>

    <mesh name="dummy-mesh">
        <use-data name="solution"/>
    </mesh>

    <participant name="laplace-solver">
        <use-mesh name="original-mesh" provide="yes"/>
        <use-mesh name="dummy-mesh" from="dummy-participant"/>
        <write-data name="solution" mesh="original-mesh"/>
        <mapping:nearest-neighbor direction="write" from="original-mesh" to="dummy-mesh" constraint="consistent" />
    </participant>

    <participant name="dummy-participant">
        <use-mesh name="dummy-mesh" provide="yes"/>
        <read-data name="solution" mesh="dummy-mesh"/>
    </participant>

    <m2n:sockets from="laplace-solver" to="dummy-participant" />

    <coupling-scheme:serial-explicit>
        <time-window-size value="1"/>
        <max-time value="1"/>
        <participants first="laplace-solver" second="dummy-participant"/>
        <exchange data="solution" mesh="dummy-mesh" from="laplace-solver" to="dummy-participant"/>
    </coupling-scheme:serial-explicit>

    </solver-interface>
</precice-configuration>
